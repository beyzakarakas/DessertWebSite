<link rel="stylesheet" href="~/css/SearchResult.css">

@model List<BalMutfak.Models.Product>

@{
    string searchTerm = ViewBag.SearchTerm as string; // SearchTerm'i ViewBag'den alıyoruz
}

<div class="menu-section">
    @if (Model != null && Model.Count > 0)
    {
        @foreach (var product in Model)
        {
            <div class="card col-md-4">
                <img src="@Url.Content(product.ImageUrl)" alt="@product.Name" class="card-img">
                <div class="card-content">
                    <h2>@product.Name</h2>
                    <p>@product.Description</p>
                </div>
            </div>
        }
    }
    else if (searchTerm == "beyza")
    {
        <div class="beyzos">
            <h2>Kendisi dünyanın en güzel tatlısı olduğu için ona erişim bulunmamaktadır.</h2>
        </div>
    }
    else
    {
        <div class="card2">
            <h2>Sonuç bulunamadı.</h2>
        </div>
    }
</div>